<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_margin="20dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40sp"
        android:orientation="horizontal">

        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="2" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="8"
            android:fontFamily="sans-serif-condensed-medium"
            android:gravity="center"
            android:layout_gravity="center"
            android:text="@string/STUDIT"
            android:textColor="@color/bottom_bar"
            android:textSize="25sp" />

        <ImageView
            android:id="@+id/home_ic_search"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:contentDescription="@string/todo"
            android:paddingVertical="5dp"
            android:layout_margin="5dp"
            app:srcCompat="@drawable/ic_search" />

        <ImageView
            android:id="@+id/home_ic_alarm"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_margin="5dp"
            android:contentDescription="@string/todo"
            android:paddingVertical="5dp"
            app:srcCompat="@drawable/ic_alarm" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:contentDescription="@string/todo"
            app:srcCompat="@drawable/ic_profile_girl" />

        <TextView
            android:id="@+id/profile_nickname"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="6"
            android:drawablePadding="10dp"
            android:text="공부수정님 환영합니다!"
            android:textColor="@color/bottom_bar"
            android:textSize="25sp"
            android:textStyle="bold" />

    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="20dp"
        android:background="@drawable/home_layout_chall"
        android:gravity="center"
        android:padding="16dp">

        <TextView
            android:id="@+id/home_challenge_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginBottom="10dp"
            android:text="'하루 5시간 공부하기' 챌린지의 달성률"
            android:textColor="@color/black"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/home_challenge_rate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/home_challenge_title"
            android:layout_marginBottom="10dp"
            android:text="65%"
            android:textStyle="bold"
            android:textColor="@color/bottom_bar"
            android:textSize="20sp" />

        <ProgressBar
            android:id="@+id/progress2"
            style="@android:style/Widget.ProgressBar.Horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/home_challenge_rate"
            android:progress="65"
            android:progressDrawable="@drawable/home_progress" />

    </RelativeLayout>

    <View
        android:id="@+id/divider"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="?android:attr/listDivider" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/home_recycler_study"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

</LinearLayout>